{
  "version": "0.2.0",
  "configurations": [
    {
      // Run the current file with node command enabling inspector and favoring development conditions
      "name": "node dev inspect",
      "type": "node",
      "request": "launch",
      "program": "${file}",
      // "runtimeVersion": "14.5.0",
      "runtimeArgs": [
        "--inspect",
        "--experimental-json-modules",
        "--experimental-import-meta-resolve",
        "--trace-warnings",
        "--conditions=dev:jsenv"
        // "--preserve-symlinks",
        // "--preserve-symlinks-main"
      ],
      "console": "integratedTerminal",
      // "args": ["--coverage"],
      "autoAttachChildProcesses": true,
      "sourceMaps": true,
      "smartStep": true,
      "skipFiles": [
        // force-array-multiline
        // "node_modules/**",
        "node_modules/@babel/template/**",
        "node_modules/@jsenv/cancellation/**",
        "node_modules/@preact/**",
        "node_modules/@rollup/**",
        "node_modules/playwright/**",
        "node_modules/playwright-chromium/**",
        "node_modules/playwright-webkit/**",
        "node_modules/playwright-firefox/**",
        "node_modules/playwright-core/**",
        "<node_internals>/**"
      ]
    },
    {
      // Run the current file with node command enabling inspector and favoring development conditions and reloading on file change
      "name": "node dev inspect watch",
      "type": "node",
      "request": "launch",
      "program": "${file}",
      "runtimeArgs": [
        "--inspect",
        "--experimental-json-modules",
        "--experimental-import-meta-resolve",
        "--trace-warnings",
        "--conditions=dev:jsenv",
        "--watch"
      ],
      "console": "integratedTerminal",
      "autoAttachChildProcesses": true,
      "sourceMaps": true,
      "smartStep": true,
      "skipFiles": [
        // force-array-multiline
        // "node_modules/**",
        "node_modules/@babel/template/**",
        "node_modules/@jsenv/cancellation/**",
        "node_modules/@rollup/**",
        "node_modules/playwright/**",
        "node_modules/playwright-chromium/**",
        "node_modules/playwright-webkit/**",
        "node_modules/playwright-firefox/**",
        "node_modules/playwright-core/**",
        "<node_internals>/**"
      ]
    },
    {
      // Run the current file with node command enabling inspector
      "name": "node inspect",
      "type": "node",
      "request": "launch",
      "program": "${file}",
      "runtimeArgs": [
        "--inspect",
        "--experimental-json-modules",
        "--experimental-import-meta-resolve",
        "--trace-warnings"
      ],
      "console": "integratedTerminal",
      "autoAttachChildProcesses": true,
      "sourceMaps": true,
      "smartStep": true,
      "skipFiles": [
        // force-array-multiline
        // "node_modules/**",
        "node_modules/@babel/template/**",
        "node_modules/@jsenv/cancellation/**",
        "node_modules/@rollup/**",
        "node_modules/playwright/**",
        "node_modules/playwright-chromium/**",
        "node_modules/playwright-webkit/**",
        "node_modules/playwright-firefox/**",
        "node_modules/playwright-core/**",
        "<node_internals>/**"
      ]
    }
  ]
}
