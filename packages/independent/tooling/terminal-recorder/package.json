  "description": "Record terminal output as .svg, .gif, .webm, .mp4",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jsenv/core",
    "directory": "packages/independent/tooling/terminal-recorder"
  },
